<?xml version="1.0" encoding="utf-8"?>
<com.de.rocket.ue.layout.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/rocket_cl_primary"
    android:orientation="vertical"
    android:gravity="center"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/iv_rocket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="50%w"
        app:layout_heightPercent="50%w"
        android:layout_centerInParent="true"
        android:src="@mipmap/rocket_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/rocket_cl_white"
        android:text="@string/rocket_need_layout"
        app:layout_marginTopPercent="10%h"
        app:layout_textSizePercent="3%h"/>

</com.de.rocket.ue.layout.PercentLinearLayout>