<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".busevent.Event2Activity">

    <Button
        android:id="@+id/btn_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EventMain"
        android:textAllCaps="false"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btn_post2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EventPosting"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btn_post"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btn_post3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EventBackgroud"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btn_post2"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btn_post4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EventAsync"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btn_post3"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>